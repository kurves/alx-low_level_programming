CC = gcc
SRC = school.c main.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

$(NAME): $(OBJ) m.h
	$(CC)  -Wall -Werror -Wextra -pedantic  $(OBJ) -o  $(NAME)


all: $(NAME)

clean:
	@$(RM) -f *~ *.swp $(NAME)

oclean:
	@find . -name '*.o' -delete -f
fclean: clean oclean

re: fclean all
