CC = gcc
SRC = school.c main.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS += -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

$(NAME): $(OBJ) m.h
	$(CC) $(CFLAGS) $(OBJ) -o  $(NAME)


all: $(NAME)

clean:
	@$(RM) -f *~ *.swp $(NAME)

oclean:
	@$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
